@model IEnumerable<WebLabs.Models.CartItem>

@{
    ViewData["Title"] = "Корзина";
}

<h1>Корзина</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <label>@item.Tehnika.Name</label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a class="btn btn-outline-danger"
                   asp-action="delete"
                   asp-controller="Cart"
                   asp-route-id="@item.Tehnika.TehnikaId">
                    <i class="fa fa-close"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
