
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>@ViewData["T"]</h1>
    <h2>Список</h2>
    <ol type="A">
        @for (int i=1; i<10; i++)
        {
            <li>Элемент @i списка </li>
        }
    </ol>
    <hr />
    <h2>Форма</h2>
    <form method="post">
        <div class="container">
            <select asp-items="@ViewData["L"] as SelectList"></select>
        </div>
        <div class="container col-sm-8">
            <input type="checkbox" name="ch1" value="ch1">Чек-бокс 1<br />
            <input type="checkbox" name="ch2" value="ch2">Чек-бокс 2<br />
        </div>
        <p>
            <div class="container col-md-8">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Радио-1" checked>
                    <label class="form-check-label" for="inlineRadio1">Радио-1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Радио-2">
                    <label class="form-check-label" for="inlineRadio2">Радио-2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="Радио-3">
                    <label class="form-check-label" for="inlineRadio3">Радио-3</label>
                </div>
            </div>
        <p />
        <div class="container">
            <div class="form-group row">
                <label for="inputLogin" class="col-sm-2 col-form-label">Логин:</label>
                <div class="col-sm-10">
                    <input type="text" name="login" class="form-control" id="inputLogin" placeholder="Введите имя">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Пароль:</label>
                <div class="col-sm-10">
                    <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Введите пароль">
                </div>
            </div>
        </div>
        <div class="container">
            <input class="btn btn-primary" type="submit" value="Отправить">
        </div>
    </form>
</div>


