@page
@model WebLabs.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Администрирование";
}

    <h1>Администрирование</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-info">
    <span class="fa fa-plus-circle">Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Tehnika[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tehnika[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tehnika[0].ArendaDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tehnika[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tehnika) {
        <tr>
            <td>
                <img src="~/images/@item.Images" alt="NoImage" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArendaDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.TehnikaGroupId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TehnikaId" class="btn btn-outline-info">
                <span class="fa fa-pencil"></span>
                </a> |
                <a asp-page="./Delete" asp-route-id="@item.TehnikaId" class="btn btn-outline-danger">
                    <span class="fa fa-close"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
